---
import { Image } from "astro:assets";
import logo from "../assets/imgs/N-com.png";
import icono from "../assets/imgs/N-icon.png"; // (Tu ruta original tenía 'assetss', la he respetado)

// Definimos cómo se ve la información del usuario
interface UserSession {
  id: string;
  username: string;
  avatar: string | null;
  esAdmin: boolean;
}

// Leemos la cookie de sesión que creamos en /api/auth/callback
const sessionCookie = Astro.cookies.get("session");
let user: UserSession | undefined = undefined;

if (sessionCookie?.value) {
  try {
    // Convertimos el texto de la cookie de nuevo en un objeto
    user = JSON.parse(sessionCookie.value) as UserSession;
  } catch (e) {
    console.error("Cookie de sesión mal formada:", e);
  }
}

// Creamos variables fáciles de usar
const isLoggedIn = !!user; // true si 'user' existe, false si no

const isAdmin = user ? user.esAdmin : false;
---

<nav>
    <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-4">
        <div class="relative flex h-16 items-center justify-between">
          <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
            <button type="button" class="relative inline-flex items-center..." aria-controls="mobile-menu" aria-expanded="false">
                </button>
          </div>
          <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
            <div class="flex shrink-0 items-center">
                <a href="/">
                    <Image
                    src={ logo }
                    alt="Novuvitae"
                    class="inline-block w-[150px] h-[54px] md:w-[150px] md:h-[54px] xl:w-[150] xl:h-[54px] "
                    loading="lazy"
                    decoding="async"
                    />
                </a>
            </div>
            <div class="hidden sm:ml-6 sm:block">
                <div class="flex space-x-4">
                    <a href="/foro" class="rounded-md px-16 py-8 text-sm font-medium text-white hover:bg-gray-700 hover:text-white">Foro</a>
                    <a href="https://b0tk.github.io/dj-web/" class="rounded-md px-16 py-8 text-sm font-medium text-white hover:bg-gray-700 hover:text-white">Bots</a>
                    <a href="#" class="rounded-md px-16 py-8 text-sm font-medium text-white hover:bg-gray-700 hover:text-white">Proyectos</a>
                </div>
            </div>
          </div>
            <div class="absolute inset-y-6 right-6 flex items-center pr-6 sm:static sm:inset-auto sm:ml-6 sm:pr-6">
              
              <button
                id="notif-button"
                type="button"
                class:list={[
                  "relative rounded-full bg-gray-800 p-1 text-gray-400 hover:text-white focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800 focus:outline-hidden",
                  { hidden: !isLoggedIn } // Se oculta si 'isLoggedIn' es false
                ]}
              >
                <span class="absolute -inset-1.5"></span>
                <span class="sr-only">Ver notificaciones</span>
                <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
                </svg>
              </button>

              <div
                id="notif-menu"
                class="hidden absolute right-12 top-14 z-20 w-64 rounded-md bg-white py-2 shadow-lg ring-1 ring-black/5"
              >
                <p class="px-4 py-2 text-sm text-gray-700">No tienes notificaciones.</p>
              </div>

            <div class="relative ml-3">
                  <div>
                    <button
                      id="user-menu-button"
                      type="button"
                      class="relative flex rounded-full bg-gray-800 text-sm focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800"
                      aria-expanded="false"
                      aria-haspopup="true"
                    >
                      <span class="absolute -inset-1.5"></span>
                      <span class="sr-only">Open user menu</span>
                      <Image 
                        alt="Menu de usuario" 
                        class="size-8 rounded-full" 
                        src={user && user.avatar ? user.avatar : icono} 
                        width={32}
                        height={32}
                      />
                    </button>
                  </div>
                  <div
                    id="user-dropdown"
                    class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-gray-700 py-1 shadow-lg ring-1 ring-black/5"
                    role="menu"
                    aria-orientation="vertical"
                    aria-labelledby="user-menu-button"
                    tabindex="-1"
                  >
                    {
                      isLoggedIn && user ? (
                        <>
                          <a href="/profile" class="block px-4 py-2 text-sm text-white">Tu perfil ({user.username})</a>
                          
                          {isAdmin && (
                            <a href="/admin" class="block px-4 py-2 text-sm text-[#64ffd6]">Administración</a>
                          )}
                          
                          <a href="/api/auth/logout" class="block px-4 py-2 text-sm text-white">Cerrar sesión</a>
                        </>
                      ) : (
                        <a href="/api/auth/login" class="block px-4 py-2 text-sm text-white">Iniciar sesión con Discord</a>
                      )
                    }
                  </div>
                </div>
            </div>
        </div>
    </div>


    
  <div class="sm:hidden" id="mobile-menu">
    <div class="space-y-1 px-2 pt-2 pb-3">
      <a href="/foro" class="block rounded-md bg-gray-900 px-3 py-2 text-base font-medium text-white" aria-current="page">Foro</a>
      <a href="https://b0tk.github.io/dj-web/" class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Bots</a>
      <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Projects</a>
    </div>
  </div>
</nav>

<script src="../assets/scripts/header.ts"></script>